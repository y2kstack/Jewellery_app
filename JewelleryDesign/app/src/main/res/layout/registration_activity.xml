<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zzzz"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="vertical" >
 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >
 <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@drawable/back"
                android:gravity="center"
                android:src="@drawable/back" />
                    <TextView
                        android:id="@+id/txtUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="25dp"
                        android:text="Welcome"
                        android:textColor="#ffffff"
                        android:textSize="25sp" />
            
           </LinearLayout>

            <ImageView
                android:id="@+id/tdxtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/whitelogos"
                android:gravity="center" />

            <TextView
                android:id="@+id/txtUserddname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Create to your account"
                android:textColor="#ffffff"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dddd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/logo"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <ScrollView
                android:id="@+id/bottom_panels"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:scrollbars="@null" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@drawable/userss"
                            android:padding="10dp"
                            android:src="@drawable/userss" />

                        <EditText
                            android:id="@+id/txt_username"
                            android:layout_width="328dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="8dp"
                            android:background="@null"
                            android:ellipsize="start"
                            android:hint="User Name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingTop="13dp"
                            android:paddingRight="13dp"
                            android:paddingBottom="13dp"
                            android:textColor="#ffffff"
                            android:textColorHint="@android:color/white"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginRight="10dp"
                        android:background="#BDBDBD" />
                    <!-- android:background="@color/white" -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="10dp"
                                android:contentDescription="@drawable/email"
                                android:padding="10dp"
                                android:src="@drawable/email" />

                            <EditText
                                android:id="@+id/txt_email"
                                android:layout_width="331dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="2dp"
                                android:background="@null"
                                android:ellipsize="start"
                                android:hint="Email   "
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:paddingTop="13dp"
                                android:paddingRight="13dp"
                                android:paddingBottom="13dp"
                                android:textColor="#ffffff"
                                android:textColorHint="@android:color/white"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" />

                      
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="55dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="#BDBDBD" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="55dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="#BDBDBD" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.9"
                            android:orientation="horizontal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@drawable/password"
                            android:padding="10dp"
                            android:src="@drawable/password" />

                        <EditText
                            android:id="@+id/txt_password"
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="2dp"
                            android:background="@null"
                            android:ellipsize="start"
                            android:hint="Passwrod"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:paddingTop="13dp"
                            android:paddingRight="13dp"
                            android:paddingBottom="13dp"
                            android:textColor="#ffffff"
                            android:textColorHint="@android:color/white"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="55dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="#BDBDBD" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="55dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="#BDBDBD" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/icons"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@drawable/userss"
                            android:padding="10dp"
                            android:src="@drawable/userss" />

                        <EditText
                            android:id="@+id/txt_fullusername"
                            android:layout_width="328dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="8dp"
                            android:background="@null"
                            android:ellipsize="start"
                            android:hint="Full Name"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingTop="13dp"
                            android:paddingRight="13dp"
                            android:paddingBottom="13dp"
                            android:textColor="#ffffff"
                            android:textColorHint="@android:color/white"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginRight="10dp"
                        android:background="#BDBDBD" />
                    <!-- android:background="@color/white" -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginRight="10dp"
                        android:background="#BDBDBD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="115dp"
                        android:layout_marginRight="10dp"
                        android:background="#BDBDBD" />
                    <!-- android:background="@color/white" -->

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_border"
                        android:padding="3dp"
                        android:text="Create"
                        android:textColor="#00AAA0"
                        android:textSize="18sp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>