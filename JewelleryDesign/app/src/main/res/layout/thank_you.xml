<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:background="@color/white"
        android:clickable="false"
        android:orientation="horizontal"
        android:padding="5dip" >

        <TextView
            android:id="@+id/txt_billing_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:text="Sipping"
android:drawableTop="@drawable/qwe"   
android:textColor="@color/ratnajyoti"         
       android:layout_gravity="center_vertical"
 />

        <View
            android:id="@+id/line1"
            android:layout_width="0.0dip"
            android:layout_height="1.0dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/black_transparent_2" />

        <TextView
            android:id="@+id/txt_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
android:text="Payment"
android:textColor="@color/ratnajyoti"   
android:drawableTop="@drawable/qwe"  />
      

        <View
            android:id="@+id/line2"
            android:layout_width="0.0dip"
            android:layout_height="1.0dip"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/black_transparent_2" />

          <TextView
            android:id="@+id/txt_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ratnajyoti"   
       android:layout_gravity="center_vertical"
android:text="Thank You"
android:drawableTop="@drawable/qwe"  />
       
    </LinearLayout>

     <View
            android:id="@+id/line51"
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:layout_below="@+id/lin1"
            android:background="@color/black_transparent_2" />
   
    
    
    <LinearLayout
        android:id="@+id/linearLaddyout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line51"
        android:layout_above="@+id/bottom_panels"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp" >

         <TextView
                android:id="@+id/txt_pydsdment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="10dp"
                android:text="Thanks for using PayPal. Your Order has been successfully submitted"
                android:textColor="@color/ratnajyoti"
                android:textSize="13sp" />
       
    </LinearLayout>
  

    <RelativeLayout
        android:id="@+id/bottom_panels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/txt_pyment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ratnajyoti"
                android:gravity="center"
                android:padding="10dp"
                android:text="Thank You"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>