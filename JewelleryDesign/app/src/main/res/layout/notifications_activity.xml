<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#F4F2F2"
    >

   <LinearLayout
       android:id="@+id/heder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
          android:gravity="center"
           android:background="@color/ratnajyoti" 
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ddddd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:padding="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:layout_marginLeft="3dp"
                android:contentDescription="@drawable/back"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Notifications"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            
        </LinearLayout>

       
    </LinearLayout>

   <LinearLayout
        android:id="@+id/ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.1dp"
        android:layout_below="@+id/heder"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@color/white"
            android:layout_marginBottom="0.1dp"
            android:layout_marginLeft="0.1dp"
            android:layout_marginTop="0.1dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/Img_product"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@null"
                android:contentDescription="@drawable/dummy"
                android:gravity="center"
                android:src="@drawable/dummy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginBottom="0.1dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.1dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:ems="13"
                    android:padding="10dp"
                    android:text="Diamond Nosepin"
                    android:textColor="@color/ratnajyoti"
                    android:textSize="16sp" />

                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.49"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txt_rupdde"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="price :"
                            android:textColor="@color/ratnajyoti"
                            android:textSize="16sp"
                            android:textAllCaps="true"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_rupddcce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500"
                            android:textColor="@color/ratnajyoti"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                          
                         
                         
                        
                    </LinearLayout>

                    
                </LinearLayout>

               
            </LinearLayout>
            
        </LinearLayout>
        
</LinearLayout>
   
   
   
   
   
   
   
   
   
   
   
   
    <LinearLayout
        android:id="@+id/ffa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/ff"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/Img_producst"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="@null"
                android:contentDescription="@drawable/dummy"
                android:gravity="center"
                android:src="@drawable/dummy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_namde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:ems="13"
                    android:padding="10dp"
                    android:text="Diamond Nosepin"
                    android:textColor="@color/ratnajyoti"
                    android:textSize="16sp" />

                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.49"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txt_rupddde"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="price :"
                            android:textColor="@color/ratnajyoti"
                            android:textSize="16sp"
                            android:textAllCaps="true"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_rupdddcce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500"
                            android:textColor="@color/ratnajyoti"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                          
                         
                         
                        
                    </LinearLayout>

                    
                </LinearLayout>

               
            </LinearLayout>
            
        </LinearLayout>
        
</LinearLayout>
   
   
   
   
   
</RelativeLayout>
