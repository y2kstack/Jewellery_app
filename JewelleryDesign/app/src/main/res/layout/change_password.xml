<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           android:background="@color/ratnajyoti"
          android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ddddd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:padding="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:layout_marginLeft="3dp"
                android:contentDescription="@drawable/back"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Change Password"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:layout_marginRight="3dp"
                android:contentDescription="@drawable/yeswhite"
                android:src="@drawable/yeswhite" />
        </LinearLayout>

       
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/dddd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/logo"
            android:layout_marginBottom="10dp"
            android:orientation="vertical" >

             <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/backgroundss"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/txt_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:ellipsize="start"
                            android:hint="Change Password"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="15dp"
                            android:textColor="@color/ratnajyoti"
                            android:textColorHint="@color/ratnajyoti"
                            android:textSize="13sp"
                             >

                            <requestFocus />
                        </EditText>
                    </LinearLayout>
                    
              <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/backgroundss"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/txt_usernamess"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:ellipsize="start"
                            android:hint="New Password"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="15dp"
                            android:textColor="@color/ratnajyoti"
                            android:textColorHint="@color/ratnajyoti"
                            android:textSize="13sp" >

                            <requestFocus />
                        </EditText>
                    </LinearLayout>
            
              
               <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/backgroundss"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/txt_userkname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:ellipsize="start"
                            android:hint="Confirm New Password "
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="15dp"
                            android:textColor="@color/ratnajyoti"
                            android:textColorHint="@color/ratnajyoti"
                            android:textSize="13sp" >

                            <requestFocus />
                        </EditText>
                    </LinearLayout>
                    
               <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:background="@drawable/button_borders"
                        android:text="Change Password"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />
        </LinearLayout>
        
         
    </LinearLayout>
 
 
</LinearLayout>