<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <LinearLayout
                        android:id="@+id/lidn5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="#CDC9C9"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/linss63"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="0.1dp"
                            android:layout_marginLeft="0.1dp"
                              android:layout_marginBottom="0.1dp"
                                 android:layout_marginTop="0.1dp"
                            android:background="#FDFDFD"
                            android:orientation="vertical"
                            android:padding="5dp" >

                            <ImageView
                                android:id="@+id/img_image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:layout_marginTop="5dp"
                                android:contentDescription="@drawable/dummy"
                                android:src="@drawable/dummy" />

                            <TextView
                                android:id="@+id/txt_nameproduct"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                               android:gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="15dp"
                                android:lines="2"
                                android:text="Green Jewellery"
                                android:textColor="#000000"
                                android:textSize="12sp" />
 <TextView
                                android:id="@+id/txt_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:textSize="9sp" 
                                android:visibility="gone"/>
                            

                            <LinearLayout
                                android:id="@+id/lin5edd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#ffffff"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="1dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="Rs."
                                    android:textSize="14sp"
                                    android:textColor="#FF0000" />

                                <TextView
                                    android:id="@+id/txt_rs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="5dp"
                                    android:text="650"
                                    android:textSize="14sp"
                                    android:textColor="#FF0000" />
                                 <TextView
                                    android:id="@+id/txt_costrs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="5dp"
                                    android:text="1900"
                                    android:visibility="gone"
                                    android:textSize="14sp"
                                    android:textColor="#FF0000" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
    
    
    
    
  
    
    
</LinearLayout>
